{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base",
        "helpers:pinGitHubActionDigests"
    ],
    "enabledManagers": [
        "helmv3",
        "helm-values"
    ],
    "suppressNotifications": [
        "prIgnoreNotification"
    ],
    "rebaseWhen": "conflicted",
    "pinDigests": true,
    "timezone":"Europe/Copenhagen",
    "gitAuthor": "Renovate Bot <bot@renovateapp.com>",
    "allowPostUpgradeCommandTemplating": true,
    "allowedPostUpgradeCommands": [
        "^\\.\/tools\/bumpAppversion.sh.*",
        "^\\.\/tools\/bumpVersion.sh.*"
    ],
    "platform": "github",
    "repositories": [
        "faustvii/true-charts"
    ],
    "postUpgradeTasks": {
        "commands": [
            "./tools/bumpAppversion.sh {{{manager}}} {{{packageFileDir}}} {{{newVersion}}}",
            "./tools/bumpVersion.sh {{{manager}}} {{{packageFileDir}}} {{{newVersion}}}"
        ],
        "fileFilters": [
            "values.yaml"
        ]
    },
    "packageRules": [
        {
            "datasources": [
                "helm"
            ],
            "matchManagers": [
                "helmv3"
            ],
            "commitMessageTopic": "Helm chart {{depName}}"
        },
        {
            "datasources": [
                "docker"
            ],
            "matchManagers": [
                "helm-values"
            ],
            "enabled": true,
            "pinDigests": true,
            "commitMessageTopic": "container image {{depName}}",
            "commitMessageExtra": "to {{#if isSingleVersion}}v{{{newVersion}}}{{else}}{{{newValue}}}{{/if}}",
            "matchUpdateTypes": [
                "major",
                "minor",
                "patch",
                "digest"
            ]
        },
        {
            "matchDatasources": [
                "docker"
            ],
            "updateTypes": [
                "major"
            ],
            "labels": ["update/major"],
            "bumpVersion": "major"
        },
        {
            "matchDatasources": [
                "docker"
            ],
            "labels": ["update/minor"],
            "matchUpdateTypes": [
                "minor",
                "patch",
                "digest"
            ],
            "bumpVersion": "patch",
            "automerge": true
        }
    ]
}
