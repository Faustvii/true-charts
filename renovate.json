{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base"
    ],
    "allowPostUpgradeCommandTemplating": true,
    "allowedPostUpgradeCommands": [
        "^\\.\/tools\/bumpAppversion.sh.*"
    ],
    "platform": "github",
    "repositories": ["faustvii/true-charts"],
    "postUpgradeTasks": {
        "commands": [
            "./tools/bumpAppversion.sh {{{packageFile}} {{{newVersion}}}"
        ],
        "fileFilters": [
            "**/*.yaml"
        ]
    }
}
