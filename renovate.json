{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base"
    ],
    "enabledManagers": [
        "helmv3",
        "helm-values"
    ],
    "allowPostUpgradeCommandTemplating": true,
    "allowedPostUpgradeCommands": [
        "^\\.\/tools\/bumpAppversion.sh.*"
    ],
    "platform": "github",
    "repositories": [
        "faustvii/true-charts"
    ],
    "postUpgradeTasks": {
        "commands": [
            "./tools/bumpAppversion.sh {{{packageFile}} {{{newVersion}}}"
        ],
        "fileFilters": [
            "**/*.yaml"
        ]
    },
    "packageRules": [
        {
            "description": "lockFileMaintenance",
            "matchUpdateTypes": [
                "pin",
                "digest",
                "patch",
                "minor",
                "major",
                "lockFileMaintenance"
            ],
            "dependencyDashboardApproval": false,
            "stabilityDays": 0
        }
    ]
}
